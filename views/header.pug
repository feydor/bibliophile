block header

  // ======= Header =======
  header#header.header.fixed-top
    div.container-fluid.container-l.d-flex.align-items-center.justify-content-between
      
      a.logo.d-flex.align-items-center(href="/")
        img(src="images/logo.png" alt="logo")  
        span Bibliophile

      nav#navbar.navbar
        
        ul
          li
            a.nav-link(href="#") Home
          li
            a.nav-link(href="/dashboard") Library
          li
            a.nav-link(href="#")
              if user
                span= user.profile.login
                //img.img-fluid(src="images/undraw_profile.svg")
              else
                span= USERNAME
            li.dropdown
              ul
                li
                  a(href="#")
                    i.bi.bi-user
                    span Profile
                li
                  a(href="#")
                    i.bi.bi-cogs
                    span Settings
                li
                  hr
                li
                  form#logoutForm(method="post" action="logout")
                    a(href="javascript:{}" onclick="document.getElementById('logoutForm').submit();"
                    )
                      i.bi.bi-sign-out
                      span Logout
        
        i.bi.bi-list.mobile-nav-toggle

  // -- End Header --

  // block specific javascript
  script(src="javascripts/nav.js")

