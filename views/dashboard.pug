extends layout

block variables
  - var title = 'Dashboard';

block content

  // page specific stylesheets
  // link(rel="stylesheet" href="stylesheets/dashboard.css")

  include mixins/dashboard.pug

  // Page Heading
  h1.h3(style="margin-top: 15vh") Virtual Library
  p.mb-4 Insert instructions about virtual-library here.

  // tabs nav
  ul#libraryTabNav.nav.nav-tabs(role="tablist")
    li.nav-item
      a#libraryTabs1.nav-link.active(href="#library-tabs-1" aria-current="page") 
        i.bi.bi-bookshelf
    li.nav-item
      a#libraryTabs2.nav-link(href="#library-tabs-2")
        i.bi.bi-bar-chart-line
    li.nav-item
      a#libraryTabs3.nav-link(href="#library-tabs-3")
        i.bi.bi-bookmark-star
    
  // tabs content
  div.tab-content
    div#library-tabs-1.tab-pane.fade.show.active 
      +YourLibrary
    div#library-tabs-2.tab-pane.fade
      +YourStats
    div#library-tabs-3.tab-pane.fade
      +YourReccs

    <!-- JS -->
    <!-- –––––––––––––––––––––––––––––––––––––––––––––––––– -->
