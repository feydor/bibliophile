extends layout

block variables
  - var title = 'Dashboard';

block content
  // Page Heading
  h1.h3.mb-2.text-gray-800 Virtual Library
  p.mb-4 Insert instructions about virtual-library here.
  
  // Table
  div.card.shadow.mb-4
    div.card-header.py-3
      div.table-header-div 
        h5.m-0.font-weight-bold.text-primary Your Library
        div.view-selectors
          button#list-view.view-selected.btn.btn-sm.btn-primary
            i.fa.fa-list
          button#gallery-view.btn.btn-sm.btn-primary
            i.fa.fa-th
    
    div#bookListCard.card-body
      div.table-responsive
        #booklist-container.table.table-striped.table-bordered(width="100%" cellspacing="0")
     
    div.card-body
      div.utility-buttons
        form#add-book-form(method="POST" action="/books")
        button#add-book-button.btn.btn-primary.btn-circle.btn-lg
          i.fa.fa-plus

    <!-- JS -->
    <!-- –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    script(src="javascripts/dashboard-library.js")
    // For DataTable
    script(
      src="https://code.jquery.com/jquery-3.5.1.min.js" 
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" 
      crossorigin="anonymous")
    script(type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.js")
    script(src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js")
    link(
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css"
    )
    link(
      rel="stylesheet" 
      href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css"
    )
