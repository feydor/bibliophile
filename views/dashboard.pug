    script(
      src="https://code.jquery.com/jquery-3.5.1.min.js" 
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" 
      crossorigin="anonymous")
    script(type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.js")
    script(src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js")
    link(
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css"
    )
    link(
      rel="stylesheet" 
      href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css"
    )
    
    // Page specific js & css
    script(src="javascripts/dashboard-library.js")
    link(rel="stylesheet" href="stylesheets/main.css")

